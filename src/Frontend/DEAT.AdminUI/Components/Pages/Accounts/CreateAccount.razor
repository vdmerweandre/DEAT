@page "/create-account"
@rendermode InteractiveServer

@inject DEAT.AdminUI.Services.Contracts.IAccountService AccountService

<PageTitle>Create Account</PageTitle>

<h1>Create Account</h1>

@code {
    private Account NewAccount = new();

    private async Task SubmitAccount()
    {
        var accountId = await AccountService.CreateAccountAsync(NewAccount);

        NewAccount = new();
    }
}

<h3>Create New Account</h3>
<form @onsubmit="SubmitAccount">
    <div class="mb-3">
        <label class="form-label">Account Name</label>
        <input type="text" class="form-control" @bind="NewAccount.AccountName" />
    </div>
    <div class="mb-3">
        <label class="form-label">Starting Balance</label>
        <input type="number" step="0.01" class="form-control" @bind="NewAccount.Credit" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
